pipeline {
    agent {
        docker {
            image 'maven:3.8.1-openjdk-11'
           // label 'docker-agent' // Optional, but useful if multiple templates
            args '-v /var/run/docker.sock:/var/run/docker.sock' // For "Docker in Docker" scenarios
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
    }
}
